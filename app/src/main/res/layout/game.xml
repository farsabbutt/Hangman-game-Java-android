            />

        <ImageView
            android:id="@+id/letter_x"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/letter_x"
            android:layout_below="@id/letter_s"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:tag="x"
            />
        <ImageView
            android:id="@+id/letter_y"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/letter_y"
            android:layout_toRightOf="@id/letter_x"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="280dp"
            android:tag="y"
            />

        <ImageView
            android:id="@+id/letter_z"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/letter_z"
            android:layout_toRightOf="@id/letter_y"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="280dp"
            android:tag="z"
            />




    </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/anim"
        android:text="anim"
        />
</RelativeLayout>


</RelativeLayout>
